{
  "name": "agile-metrics-tools",
  "version": "1.0.0",
  "description": "",
  "author": "ferzerkerx",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && yarn prepare-web && node dist/api/server.js",
    "prepare-web": "cp -R src/api/resources dist/ && cp -R src/api/template-configs/* dist/api/template-configs",
    "build": "yarn compile",
    "compile": "tsc",
    "dev": "tsc & nodemon dist",
    "test": "jest --coverage",
    "prettier": "prettier --write --config=.prettierrc \"src/**/*.[tj]s\"",
    "tsc": "tsc"
  },
  "dependencies": {
    "@octokit/rest": "^16.28.5",
    "bottleneck": "^2.15.3",
    "csvtojson": "^2.0.8",
    "elasticsearch": "^16.3.0",
    "express": "^4.17.1",
    "node-env-file": "^0.1.8",
    "node-fetch": "^2.6.0"
  },
  "engines": {
    "node": ">=8.15.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^24.0.15",
    "@types/node": "10.11.0",
    "husky": "^3.0.1",
    "jest": "^23.6.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.1",
    "ts-node": "^8.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "lint-staged": {
    "./**/*.{ts,js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
