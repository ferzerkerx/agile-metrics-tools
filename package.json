{
  "name": "agile-metrics-tools",
  "version": "1.0.0",
  "description": "",
  "author": "ferzerkerx",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && yarn prepare-web && node dist/api/server.js",
    "start-local": "yarn build && yarn prepare-web && ES_HOST=http://localhost:9200 node dist/api/server.js",
    "prepare-web": "cp -R src/api/resources dist/ && cp -R src/api/template-configs/* dist/api/template-configs",
    "build": "yarn compile",
    "compile": "tsc",
    "dev": "tsc & nodemon dist",
    "test": "jest --coverage",
    "lint": "eslint --quiet 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.[tj]s\"",
    "tsc": "tsc"
  },
  "dependencies": {
    "@octokit/rest": "^16.43.1",
    "bottleneck": "^2.19.5",
    "csvtojson": "^2.0.8",
    "elasticsearch": "^16.7.1",
    "express": "^4.17.1",
    "node-env-file": "^0.1.8",
    "node-fetch": "^2.6.1",
    "winston": "^3.3.3"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "devDependencies": {
    "@types/express": "4.17.2",
    "@types/jest": "26.0.10",
    "@types/node": "13.7.1",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "24.9.0",
    "lint-staged": "10.5.1",
    "prettier": "2.1.1",
    "ts-jest": "24.3.0",
    "ts-loader": "8.0.3",
    "ts-node": "9.0.0",
    "typescript": "4.0.2"
  },
  "lint-staged": {
    "./**/*.{ts,js}": [
      "yarn lint",
      "yarn format"
    ],
    "./**/*.{json}": [
      "yarn format"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
